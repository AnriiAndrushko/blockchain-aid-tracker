@using BlockchainAidTracker.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider
@implements IDisposable
@rendermode InteractiveServer

@if (authenticationStateTask != null)
{
    <CascadingValue TValue="Task<AuthenticationState>" Value="@authenticationStateTask" IsFixed="false">
        <div class="top-row ps-3 navbar navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="">
                <i class="bi bi-box-seam me-2"></i>
                Aid Tracker
            </a>
        </div>
    </div>

    <input type="checkbox" title="Navigation menu" class="navbar-toggler" />

    <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
        <nav class="nav flex-column">
            <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="dashboard" Match="NavLinkMatch.All">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="shipments">
                        <i class="bi bi-box-seam me-2"></i> Shipments
                    </NavLink>
                </div>

                <AuthorizeView Roles="Coordinator" Context="coordinatorContext">
                    <Authorized>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="shipments/create">
                                <i class="bi bi-plus-circle me-2"></i> Create Shipment
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="blockchain">
                        <i class="bi bi-diagram-3 me-2"></i> Blockchain Explorer
                    </NavLink>
                </div>

                <hr class="my-2" />

                <div class="nav-item px-3">
                    <div class="user-info-panel p-3 bg-light rounded">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-person-circle fs-3 me-2"></i>
                            <div>
                                <div class="fw-bold">@firstName @lastName</div>
                                <div class="small text-muted">@("@" + username)</div>
                            </div>
                        </div>
                        <div class="small">
                            <span class="badge bg-primary">@role</span>
                        </div>
                    </div>
                </div>

                <div class="nav-item px-3 mt-2">
                    <button class="nav-link btn btn-link text-danger w-100 text-start" @onclick="HandleLogout">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </button>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Login
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register">
                        <i class="bi bi-person-plus me-2"></i> Register
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>
    </CascadingValue>
}

@code {
    private Task<AuthenticationState>? authenticationStateTask;
    private string username = "User";
    private string firstName = "User";
    private string lastName = "";
    private string role = "Guest";

    protected override void OnInitialized()
    {
        // Initialize immediately (synchronously) to avoid null during first render
        authenticationStateTask = AuthProvider.GetAuthenticationStateAsync();
    }

    protected override async Task OnInitializedAsync()
    {
        // Set the authentication state task for cascading to child components
        authenticationStateTask = AuthProvider.GetAuthenticationStateAsync();

        var authState = await authenticationStateTask;
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            UpdateUserInfo(user);
        }

        AuthProvider.AuthenticationStateChanged += OnAuthenticationStateChanged;
    }

    private async void OnAuthenticationStateChanged(Task<AuthenticationState> task)
    {
        // Update the cascaded authentication state task
        authenticationStateTask = task;

        var authState = await task;
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            UpdateUserInfo(user);
        }
        else
        {
            username = "User";
            firstName = "User";
            lastName = "";
            role = "Guest";
        }

        await InvokeAsync(StateHasChanged);
    }

    private void UpdateUserInfo(System.Security.Claims.ClaimsPrincipal user)
    {
        username = user.Identity?.Name ?? "User";
        firstName = user.FindFirst(System.IdentityModel.Tokens.Jwt.JwtRegisteredClaimNames.GivenName)?.Value ?? "User";
        lastName = user.FindFirst(System.IdentityModel.Tokens.Jwt.JwtRegisteredClaimNames.FamilyName)?.Value ?? "";
        role = user.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Guest";
    }

    private async Task HandleLogout()
    {
        await AuthStateProvider.MarkUserAsLoggedOut();
        Navigation.NavigateTo("/login");
    }

    public void Dispose()
    {
        AuthProvider.AuthenticationStateChanged -= OnAuthenticationStateChanged;
    }
}

