@page "/shipments/{id:guid}"
@using BlockchainAidTracker.Web.Services
@attribute [Authorize]
@inject ApiClientService ApiClient
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Shipment Details - Blockchain Aid Tracker</PageTitle>

<div class="container-fluid">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading shipment details...</p>
        </div>
    }
    else if (shipment == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Shipment not found
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/shipments">Shipments</a></li>
                        <li class="breadcrumb-item active">@shipment.Id.ToString().Substring(0, 8)</li>
                    </ol>
                </nav>
                <h2><i class="bi bi-box-seam me-2"></i>Shipment Details</h2>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-lg-8">
                <div class="card mb-3">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Shipment Information</h5>
                        <span class="badge bg-@GetStatusColor(shipment.Status) fs-6">@shipment.Status</span>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Shipment ID:</strong></p>
                                <code class="text-primary">@shipment.Id</code>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>QR Code:</strong></p>
                                <code>@shipment.QrCode</code>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p class="mb-1"><strong><i class="bi bi-geo-alt-fill text-success"></i> Origin:</strong></p>
                                <p class="text-muted">@shipment.OriginLocation</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong><i class="bi bi-geo-alt-fill text-danger"></i> Destination:</strong></p>
                                <p class="text-muted">@shipment.DestinationLocation</p>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Created:</strong></p>
                                <p class="text-muted">@shipment.CreatedAt.ToLocalTime().ToString("MMMM dd, yyyy HH:mm")</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Last Updated:</strong></p>
                                <p class="text-muted">@shipment.UpdatedAt.ToLocalTime().ToString("MMMM dd, yyyy HH:mm")</p>
                            </div>
                        </div>

                        @if (shipment.ExpectedDeliveryStart.HasValue && shipment.ExpectedDeliveryEnd.HasValue)
                        {
                            <div class="row mb-3">
                                <div class="col-12">
                                    <p class="mb-1"><strong>Expected Delivery:</strong></p>
                                    <p class="text-muted">
                                        @shipment.ExpectedDeliveryStart.Value.ToLocalTime().ToString("MMM dd, yyyy")
                                        - @shipment.ExpectedDeliveryEnd.Value.ToLocalTime().ToString("MMM dd, yyyy")
                                    </p>
                                </div>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Assigned Recipient:</strong></p>
                                <p class="text-muted">@(shipment.AssignedRecipientName ?? "Not assigned")</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-box me-2"></i>Shipment Items</h5>
                    </div>
                    <div class="card-body">
                        @if (shipment.Items.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Quantity</th>
                                            <th>Unit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in shipment.Items)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.Unit</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No items listed</p>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Blockchain History</h5>
                    </div>
                    <div class="card-body">
                        @if (transactions.Any())
                        {
                            <div class="timeline">
                                @foreach (var tx in transactions.OrderByDescending(t => t.Timestamp))
                                {
                                    <div class="timeline-item mb-3">
                                        <div class="d-flex">
                                            <div class="timeline-marker me-3">
                                                <i class="bi bi-circle-fill text-primary"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div>
                                                        <strong>@tx.Type</strong>
                                                        <br />
                                                        <small class="text-muted">
                                                            @tx.Timestamp.ToLocalTime().ToString("MMM dd, yyyy HH:mm:ss")
                                                        </small>
                                                    </div>
                                                    <span class="badge bg-secondary">Block @tx.BlockIndex</span>
                                                </div>
                                                <div class="mt-2">
                                                    <small><strong>TX ID:</strong> <code>@tx.Id.Substring(0, 16)...</code></small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No blockchain transactions found</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card mb-3">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-qr-code me-2"></i>QR Code</h5>
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(qrCodeImage))
                        {
                            <img src="data:image/png;base64,@qrCodeImage" alt="QR Code" class="img-fluid" style="max-width: 250px;" />
                        }
                        else if (isLoadingQr)
                        {
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">QR code not available</p>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary" @onclick="ViewOnBlockchain">
                                <i class="bi bi-diagram-3 me-2"></i>View on Blockchain
                            </button>
                            <button class="btn btn-outline-secondary" @onclick="GoBack">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private bool isLoading = true;
    private bool isLoadingQr = false;
    private ShipmentDetailDto? shipment;
    private List<TransactionDto> transactions = new();
    private string qrCodeImage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadShipmentDetails();
        await LoadBlockchainHistory();
        await LoadQrCode();
    }

    private async Task LoadShipmentDetails()
    {
        try
        {
            isLoading = true;
            shipment = await ApiClient.GetAsync<ShipmentDetailDto>($"/api/shipments/{Id}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading shipment: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadBlockchainHistory()
    {
        try
        {
            transactions = await ApiClient.GetAsync<List<TransactionDto>>($"/api/shipments/{Id}/history") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading blockchain history: {ex.Message}");
        }
    }

    private async Task LoadQrCode()
    {
        try
        {
            isLoadingQr = true;
            var response = await ApiClient.GetAsync<QrCodeResponse>($"/api/shipments/{Id}/qrcode");
            if (response != null)
            {
                qrCodeImage = response.QrCodeBase64;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading QR code: {ex.Message}");
        }
        finally
        {
            isLoadingQr = false;
        }
    }

    private void ViewOnBlockchain()
    {
        Navigation.NavigateTo("/blockchain");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/shipments");
    }

    private string GetStatusColor(string status)
    {
        return status switch
        {
            "Created" => "secondary",
            "Validated" => "info",
            "InTransit" => "warning",
            "Delivered" => "success",
            "Confirmed" => "success",
            _ => "secondary"
        };
    }

    private class ShipmentDetailDto
    {
        public Guid Id { get; set; }
        public string OriginLocation { get; set; } = string.Empty;
        public string DestinationLocation { get; set; } = string.Empty;
        public string Status { get; set; } = string.Empty;
        public string QrCode { get; set; } = string.Empty;
        public string? AssignedRecipientName { get; set; }
        public DateTime? ExpectedDeliveryStart { get; set; }
        public DateTime? ExpectedDeliveryEnd { get; set; }
        public DateTime CreatedAt { get; set; }
        public DateTime UpdatedAt { get; set; }
        public List<ShipmentItemDto> Items { get; set; } = new();
    }

    private class ShipmentItemDto
    {
        public string Name { get; set; } = string.Empty;
        public int Quantity { get; set; }
        public string Unit { get; set; } = string.Empty;
    }

    private class TransactionDto
    {
        public string Id { get; set; } = string.Empty;
        public string Type { get; set; } = string.Empty;
        public DateTime Timestamp { get; set; }
        public int BlockIndex { get; set; }
    }

    private class QrCodeResponse
    {
        public string QrCodeBase64 { get; set; } = string.Empty;
    }
}
