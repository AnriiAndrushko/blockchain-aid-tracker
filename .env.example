# Docker Environment Variables Example
# Copy this file to .env and configure your settings

# JWT Configuration
# IMPORTANT: Change this to a secure random string for production (min 32 characters)
JWT_SECRET_KEY=your-secret-key-min-32-characters-long-for-production-use

# ASP.NET Core Environment
# Options: Development, Production
ASPNETCORE_ENVIRONMENT=Production

# Blockchain Persistence
BlockchainPersistence__Enabled=true
BlockchainPersistence__MaxBackupCount=5

# Consensus Settings
ConsensusSettings__BlockCreationIntervalSeconds=30
ConsensusSettings__MinTransactionsPerBlock=1
ConsensusSettings__MaxTransactionsPerBlock=100

# JWT Token Settings
JwtSettings__AccessTokenExpirationMinutes=60
JwtSettings__RefreshTokenExpirationDays=7
